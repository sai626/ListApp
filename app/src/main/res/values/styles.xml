<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadingText">
        <item name="android:textColor">@color/color900</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SubheadingText">
        <item name="android:textColor">@color/color700</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/color500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailsText">
        <item name="android:textColor">@color/color300</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
